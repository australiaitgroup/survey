{
	"root": true,
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"rules": {
		"indent": ["error", "tab"],
		"no-mixed-spaces-and-tabs": "error"
	},
	"ignorePatterns": ["node_modules/", "client/node_modules/", "client/dist/"]
}
