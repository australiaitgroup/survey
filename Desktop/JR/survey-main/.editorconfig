# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
tab_width = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 4
tab_width = 4

# JSON files - using tabs to match project style
[*.json]
indent_style = tab
indent_size = 4
tab_width = 4

# CSS/SCSS files
[*.{css,scss,less}]
indent_style = tab
indent_size = 4
tab_width = 4

# HTML files
[*.html]
indent_style = tab
indent_size = 4
tab_width = 4

# Markdown files - using tabs to match project style
[*.md]
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = tab
indent_size = 4
tab_width = 4 